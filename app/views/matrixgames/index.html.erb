<img src="/assets/back1.jpg"></img>
<h1>List avaiable game!</h1>
<% @matrixgames.each do |game| %>
<div class="onegame">
  <div class="p1">
<% if game.user1_id %>
<%= User.find(game.user1_id).name %>
<% else %>
<%= link_to "JOIN GAME", matrixgame_path(game) %>
<% end %>
  </div>
  <div class="p2">
<% if game.user2_id %>
<%= User.find(game.user2_id).name %>
<% else %>
<%= link_to "JOIN GAME", matrixgame_path(game) %>
<% end %>
  </div>
</div>
<% end %>
<style>
.onegame{
  width: 100%;
  height: 50px;
  background-color: green;
}
.p1{
  color: white;
  line-height: 50px;
  padding-left: 20px;
  font-size: 25px;
  float: left;
}

.p2{
  color: white;
  line-height: 50px;
  padding-right: 20px;
  font-size: 25px;
  float: right;
}
</style>